<!-- HEADER -->
<header>
    <!-- TOP HEADER -->
    <div id="top-header">
        <div class="container">
            <ul class="header-links pull-left">
                <li style="color: white;"><i class="fa fa-phone"></i> 85 555</li>
                <li style="color: white;"><i class="fa fa-envelope-o"></i> echriPC@gmail.com</li>
                <li style="color: white;"><i class="fa fa-map-marker"></i> INSAT - Centre Urbain </li>
            </ul>
            <ul class="header-links pull-right">
                {% if app.user is not null %}
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-user-o"></i> My Account <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" style="background-color: #333;">
                            <li>
                                <a href="{{ path('app_account') }}">
                                    <i class="fa fa-user"></i> My Profile
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('app_order_history') }}">
                                    <i class="fa fa-history"></i> Order History
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('app_login') }}">
                                    <i class="fa fa-sign-in"></i> Change Account
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#" data-toggle="modal" data-target="#logoutModal">
