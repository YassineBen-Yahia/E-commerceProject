{% extends 'base.html.twig' %}

{% block title %}Your Shopping Cart{% endblock %}
{% block emplacement %}Shopping Cart{% endblock %}

{% block body %}
<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="section-title">Your Shopping Cart</h2>


                {% if cart is empty or cart.cartItems.count == 0 %}
                    {% for type, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ type}} ">
                                {{message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                    <div class="alert alert-info">
                        <p>Your cart is empty. <a href="{{ path('app_index') }}" class="primary-btn">Continue Shopping</a></p>
                    </div>

                {% else %}
                    <div class="table-responsive">
                        <table class="table cart-table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Subtotal</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in cart.cartItems %}
                                <tr>
                                    <td class="cart-product">
                                        <div class="product-item">
                                            <div class="product-thumb">
                                                <img src="{{ asset('styles/' ~ item.produit.image) }}"
                                                     alt="{{ item.produit.name }}"
                                                     onerror="this.src='{{ asset('styles/img/product01.png') }}'"
                                                     style="max-width: 80px; max-height: 80px; object-fit: contain;">
                                            </div>
                                            <div class="product-info">
                                                <h4>{{ item.produit.name }}</h4>
                                                <p>{{ item.produit.categorie.name }}</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="cart-price">€{{ item.produit.price }}</td>
                                    <td class="cart-quantity">{{ item.quantité }}</td>
                                    <td class="cart-subtotal">€{{ item.produit.price * item.quantité}}</td>
                                    <td class="cart-actions">
                                        <a href="{{ path('app_update_item', {'id': item.id}) }}"
                                           class="btn btn-sm btn-primary"><i class="fa fa-edit"></i> Edit</a>
                                        <a href="{{ path('app_cart_remove_item', {'id': item.id}) }}"
                                           class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> Remove</a>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <a href="{{ path('app_index') }}" class="primary-btn">Continue Shopping</a>
                        </div>
                        <div class="col-md-6">
                            <div class="cart-summary">
                                <h3>Cart Summary</h3>
                                <div class="summary-row">
                                    <span>Subtotal:</span>
                                    <span>€{{ total}}</span>
                                </div>
                                <div class="summary-row">
                                    <span>Shipping:</span>
                                    <span>€0.00</span>
                                </div>
                                <div class="summary-row total">
                                    <span>Total:</span>
                                    <span>€{{ total }}</span>
                                </div>
                                <button
                                        type="button"
                                        class="primary-btn"
                                        id="proceedToCheckout"
                                        data-verified="{{ app.user and app.user.isVerified ? 'true' : 'false' }}">
                                    Proceed to Checkout
                                </button>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="verifyModal" tabindex="-1" aria-labelledby="verifyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #2B2D42; color: white;">
                <h5 class="modal-title" id="verifyModalLabel">Email Verification Required</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>You need to verify your email address to proceed to checkout. Please verify your email to continue.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a href="{{ path('app_index') }}" class="btn btn-primary" style="background-color: #D10024; border-color: #D10024;">Verify Email</a>
            </div>
        </div>
    </div>
</div>

<script src="{{ asset('styles/js/cart.js') }}"></script>
{% endblock %}