{% extends 'base.html.twig' %}

{% set showHeader = false%}
{% set showFooter = false%}

{% block title %}Register{% endblock %}
{% block emplacement %} Inscription {% endblock %}

{% block body %}

    {% if errors %}
        <div class="alert alert-danger">
            {{ errors|join('<br>') }}
        </div>
    {% endif %}


   <div class="container my-4 pt-4">
        <h1>Register</h1>
       <div class="row justify-content-center">
           <div class="col-md-8 mt-2 col-lg-6">
               <div class="card shadow">
                   <div class="card-header  text-white">
                       <h3 class="mb-0">Create an Account</h3>
                   </div>
                   <div class="card-body p-4">
                       {{ form_errors(registrationForm) }}

                       {{ form_start(registrationForm) }}
                           <div class="mb-3">
                               {{ form_label(registrationForm.name, 'Full Name') }}
                               {{ form_widget(registrationForm.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter your full name'}}) }}
                               {{ form_help(registrationForm.name) }}
                           </div>

                           <div class="mb-3">
                               {{ form_label(registrationForm.adress, 'Address') }}
                               {{ form_widget(registrationForm.adress, {'attr': {'class': 'form-control', 'placeholder': 'Enter your address'}}) }}
                               {{ form_help(registrationForm.adress) }}
                           </div>

                           <div class="mb-3">
                               {{ form_label(registrationForm.email, 'Email Address') }}
                               {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'example@example.com'}}) }}
                               {{ form_help(registrationForm.email) }}
                           </div>

                           <div class="mb-3">
                               {{ form_label(registrationForm.plainPassword, 'Password') }}
                               {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Create a strong password'}}) }}
                               {{ form_help(registrationForm.plainPassword) }}
                           </div>

                           <div class="mb-4 form-check">
                               {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                               {{ form_label(registrationForm.agreeTerms, 'I agree to the terms and conditions', {'label_attr': {'class': 'form-check-label'}}) }}
                           </div>

                           <button type="submit" class="btn btn-primary btn-lg w-100">Register Account</button>
                       {{ form_end(registrationForm) }}

                       <div class="mt-3 text-center">
                           <p>Already have an account? <a href="#">Sign in</a></p>
                       </div>
                   </div>
               </div>
           </div>
       </div>
   </div>
{% endblock %}
