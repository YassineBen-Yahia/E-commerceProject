{% extends 'base.html.twig' %}


{% block title %}Add to Cart - {{ produit.name }}{% endblock %}
{% block emplacement %} Add to cart {%  endblock %}

{% block store %}
<!-- SECTION -->
<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="product-image-container">
                    <img src="{{ asset('styles/' ~ produit.image) }}" alt="{{ produit.name }}" class="img-fluid"
                         onerror="this.src='{{ asset('styles/img/laptop1.png') }}'">
                </div>
            </div>

            <div class="col-md-6">
                <div class="product-details">
                    <h2 class="product-name">{{ produit.name }}</h2>
                    <div class="product-price mb-4">â‚¬{{ produit.price }}</div>

                    <div class="product-description mb-4">
                        <p>{{ produit.description }}</p>
                    </div>

                    <!-- Add to Cart Form -->
                    <form method="post" action="{{ path('app_cart_add_item', {'id': produit.id}) }}">
                        <div class="form-group mb-3">
                            <label for="quantity" class="form-label">Quantity</label>
                            <input type="number" id="quantity" name="quantity" class="form-control"
                                   min="1" max="{{ produit.stock }}" value="1" required>
                        </div>

                       <button type="submit" class="primary-btn" onclick="window.location.href='{{ path('app_cart') }}'; return true;">Add to Cart</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /SECTION -->
{% endblock %}