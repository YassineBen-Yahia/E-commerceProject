{% extends 'base.html.twig' %}

{% block title %}ShoeStore - Accueil{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: linear-gradient(135deg, rgba(19, 53, 139, 0.05) 0%, rgba(33, 85, 101, 0.05) 100%);
        }

        .hero-section {
            padding: 0; /* Remove padding to avoid space around the image */
            width: 100%;
            height: 100vh; /* Full viewport height */
            background: linear-gradient(rgba(19, 125, 139, 0.8), rgba(33, 87, 101, 0.8)),
            url('{{ asset('styles/img/hero.jpg') }}');
            background-size: cover;       /* Ensures image covers entire section */
            background-position: center;  /* Centers the image */
            background-repeat: no-repeat; /* Prevents tiling */
            position: relative;
            overflow: hidden;
            color: var(--light-color);
            margin: 0; /* Optional: Remove margin if not needed */
        }


        .hero-section {
            display: flex;
            align-items: center;     /* Centre verticalement */
            justify-content: center; /* Centre horizontalement */
            text-align: center;      /* Centre le texte */
            padding: 0;
            width: 100%;
            height: 100vh;
            background: linear-gradient(rgba(19, 125, 139, 0.8), rgba(33, 87, 101, 0.8)),
            url('{{ asset('styles/img/hero.jpg') }}');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            position: relative;
            overflow: hidden;
            color: var(--light-color);
        }


        .hero-content {
            background-position: center;
            position: relative;
            z-index: 1;
            max-width: 800px;
            margin: 0 auto;
            text-align: center;
        }

        .hero-title {
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            letter-spacing: 2px;
            text-transform: uppercase;
        }

        .hero-subtitle {
            font-size: 1.25rem;
            opacity: 0.9;
            margin-bottom: 2rem;
            letter-spacing: 1px;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
        }

        .btn-hero {
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 2px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            border: 2px solid var(--light-color);
            background: transparent;
            font-size: 0.9rem;
        }

        .btn-hero:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            background: var(--light-color);
            color: var(--primary-color);
        }

        .category-card {
            border: none;
            border-radius: 20px;
            overflow: hidden;
            transition: all 0.3s ease;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            background: var(--light-color);
            position: relative;
        }

        .category-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(19, 75, 139, 0.1) 0%, rgba(33, 55, 101, 0.1) 100%);
            z-index: 1;
        }

        .category-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
        }

        .category-icon {
            height: 200px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, rgba(139,69,19,0.05) 0%, rgba(101,67,33,0.05) 100%);
        }

        .category-icon i {
            font-size: 5rem;
            color: var(--primary-color);
            transition: all 0.3s ease;
        }

        .category-card:hover .category-icon i {
            transform: scale(1.1);
        }

        /*.text-brown {*/
        /*    color: var(--primary-color);*/
        /*}*/

        .product-card {
            border: none;
            border-radius: 20px;
            overflow: hidden;
            transition: all 0.3s ease;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            background: var(--light-color);
        }

        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
        }

        .product-image {
            height: 300px;
            object-fit: cover;
            transition: all 0.5s ease;
        }

        .product-card:hover .product-image {
            transform: scale(1.05);
        }

        .section-title {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 3rem;
            text-align: center;
            position: relative;
            padding-bottom: 1rem;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 3px;
            background: linear-gradient(90deg, transparent, var(--primary-color), transparent);
        }

        .testimonial-card {
            border: none;
            border-radius: 20px;
            padding: 2.5rem;
            background: var(--light-color);
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            position: relative;
            overflow: hidden;
        }

        .testimonial-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, var(--primary-color), var(--primary-dark));
        }

        .newsletter-section {
            background: linear-gradient(135deg, var(--primary-dark) 0%, var(--primary-color) 100%);
            padding: 6rem 0;
            position: relative;
            overflow: hidden;
        }

        .newsletter-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('{{ asset('styles/img/avatar.jpg') }}') repeat;
            opacity: 0.1;
        }

        .newsletter-input {
            border-radius: 30px;
            padding: 1rem 1.5rem;
            border: 2px solid rgba(255,255,255,0.1);
            background: rgba(255,255,255,0.1);
            color: var(--light-color);
            backdrop-filter: blur(5px);
            transition: all 0.3s ease;
        }

        .newsletter-input:focus {
            background: rgba(255,255,255,0.2);
            box-shadow: 0 0 15px rgba(91, 220, 152, 0.3);
            border-color: var(--accent-color);
        }

        .newsletter-input::placeholder {
            color: rgba(255,255,255,0.6);
        }

        .newsletter-button {
            border-radius: 30px;
            padding: 1rem 2rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 2px;
            background: var(--light-color);
            color: var(--primary-color);
            border: none;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .newsletter-button:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
            background: var(--accent-color);
            color: var(--primary-dark);
        }

        .newsletter-button::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            opacity: 0;
            transition: all 0.3s ease;
        }

        .newsletter-button:hover::after {
            opacity: 0.1;
        }
    </style>
{% endblock %}

