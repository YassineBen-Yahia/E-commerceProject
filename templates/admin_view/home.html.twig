{% extends 'base.html.twig' %}

{% block header %}
    {% include 'admin_fragments/header.html.twig' %}
    {% include 'admin_fragments/navigation.html.twig' with {'role': "home"} %}
{% endblock %}

{% block body %}
    <div class="container mt-4">

        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="card shadow-sm p-4">
            <h1 class="mb-3">Admin Dashboard</h1>
            <p class="lead">Welcome to the <strong>Admin Space</strong>. Here you can manage and monitor the main features of the website.</p>

            <hr>

            <div class="mt-4">
                <a href="{{ url('produit.list') }}"><h5>✔ Product Management</h5></a>
                <p>View, add, update, and remove product listings. Ensure that the catalog is always up to date.</p>

                <a href="{{ url('users.admin')}}" ><h5>✔ User Management</h5></a>
                <p>Monitor registered users, manage their roles, and handle account-related operations.</p>

                <a href="{{ url('orders.list') }}" ><h5>✔ Order Management</h5></a>
                <p>Track customer orders, view order details, and manage the delivery or cancellation processes.</p>

                <a href="{{ url('admin_statistics_categories') }}"><h5>✔ Statistics & Reports</h5></a>
                <p>Access sales statistics, user activity, and other data to help make informed decisions.</p>
            </div>

        </div>

    </div>
{% endblock %}

{% block footer %}
    {% include 'admin_fragments/footer.html.twig' %}
{% endblock %}
