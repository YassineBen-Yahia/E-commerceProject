{% extends 'base.html.twig' %}
{% block header %}
    {% include 'admin_fragments/header.html.twig' %}
    {% include 'admin_fragments/navigation.html.twig' with {'role': 'products'} %}
{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('css/buttons.css') }}">
<div class="container mt-4">

    {% if  id==0   %}
    <h1>Add Product</h1>
    {% else %}
    <h1>Edit Product</h1>
    {% endif %}


    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.name, 'Product Name') }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.name) }}
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <div class="form-group">
                    {{ form_label(form.description, 'Description') }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                    {{ form_errors(form.description) }}
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.price, 'Price') }}
                    {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.price) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.stock, 'Stock') }}
                    {{ form_widget(form.stock, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.stock) }}
                </div>
            </div>
        </div>

    {% if form.categorie is defined %}
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.categorie, 'Category') }}
                    {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.categorie) }}
                </div>
            </div>
        </div>
    {% endif %}

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.image, 'Product Image') }}
                    {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                    <small class="form-text text-muted">Format accept√©: JPG, JPEG, PNG (max 1Mo)</small>
                    {{ form_errors(form.image) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                {% if  id==0   %}
                    <button type="submit" class="btn custom-admin-btn">Add Product</button>
                {% else %}
                    <button type="submit" class="btn custom-admin-btn">Edit Product</button>
                {% endif %}
                <a href="{{ url('produit.list') }}" class="btn admin-cancel-btn">cancel</a>
            </div>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}

{% block footer %}
    {% include 'admin_fragments/footer.html.twig' %}
{% endblock %}